@inherits LayoutComponentBase

@code {
    private MudTheme _theme = new();
    private bool darkModeEnabled = true;
}

<MudThemeProvider @bind-IsDarkMode="@darkModeEnabled" Theme="_theme" />

<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-2">Mqtt Broker Dashboard</MudText>
        <MudSpacer />

        <MudToggleIconButton @bind-Toggled="darkModeEnabled"
                             Icon="@Icons.Material.Filled.LightMode"
                             ToggledIcon="@Icons.Material.Filled.DarkMode" />

    </MudAppBar>
    <MudMainContent>
        <MudContainer Class="py-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>